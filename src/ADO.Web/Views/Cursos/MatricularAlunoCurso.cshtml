@model ADO.Business.Models.AlunoCurso

@{
    ViewData["Title"] = "Matricular Aluno";
}

<h1>@ViewData["Title"]</h1>
<hr />
<vc:summary></vc:summary>
<div class="row">
    <div class="col-md-4">

        <form asp-action="MatricularAlunoCurso">



            <div class="form-group">
                <label class="control-label">Alunos</label>
                <select asp-for="Aluno_id" class="form-control" asp-items="@(new SelectList(Model.alunos,"Id","Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="Aluno_id" class="text-danger"></span>

                <div class="form-group">
                    <label class="control-label">Cursos</label>
                    <select asp-for="Curso_Id" class="form-control" asp-items="@(new SelectList(Model.cursos,"Id","Descricao"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="Curso_Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index">Voltar </a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script></script>
}
